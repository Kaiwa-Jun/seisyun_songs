<turbo-frame id="like-button-<%= song.id %>">
  <% if liked %>
    <%= link_to like_path(song.id), method: :delete, data: { turbo_method: :delete } do %>
      <i class="fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to likes_path(song_id: song.id), method: :post, data: { turbo_method: :post } do %>
      <i class="far fa-heart"></i>
    <% end %>
  <% end %>
</turbo-frame>
