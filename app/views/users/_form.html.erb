<% if @user.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded" role="alert">
    <strong class="font-bold">エラーが発生しました！</strong><br />
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li>・<%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
